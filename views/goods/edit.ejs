<%- include('../partials/header')%>

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Goods</h1>


        <div class="card">
            <form action="" method="post" enctype="multipart/form-data">
                <div class="card-header">
                    <h6 style="color: blue">Form edit</h6>
                </div>

                <div class="card-body">
                    <div class="mb-3 row">
                        <label for="barcode" class="col-sm-2 col-form-label">Barcode</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="barcode" name="barcode"
                                value="<%= data.barcode %>" readonly>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="name" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="name" name="name" value="<%= data.name %>"
                                required>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="stock" class="col-sm-2 col-form-label">Stock</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="stock" name="stock" value="<%= data.stock %>"
                                required>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="purchaseprice" class="col-sm-2 col-form-label">Purchase price</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="purchaseprice" name="purchaseprice"
                                value="<%= data.purchaseprice %>" required>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="sellingprice" class="col-sm-2 col-form-label">Selling Price</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="sellingprice" name="sellingprice"
                                value="<%= data.sellingprice %>" required>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="unit" class="col-sm-2 col-form-label">Unit</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="unit" name="unit" required>
                                <option value="<% data.unit %>">
                                    <% data.unit %>
                                </option>
                                <% units.forEach(item=> { %>
                                    <option value="<%= item.unit %>" <%=data.unit==item.unit ? " selected" : "" %>>
                                        <%= item.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="picture" class="col-sm-2 col-form-label">Picture</label>
                        <div class="col-sm-10">
                            <div class="custom-file mb-3">
                                <input type="file" class="custom-file-input" id="picture" name="sampleFile"
                                    accept="image/png, image/gif, image/jpeg">
                                <label class="custom-file-label" for="picture">Choose file</label>
                                <div class="invalid-feedback">Example invalid custom file feedback</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="picture" class="col-sm-2 col-form-label">Preview</label>
                        <div class="col-sm-10">
                            <img src="/images/uploadgoods/<%= data.picture %>" class="img-thumbnail" alt="" width="300"
                                height="auto" />
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary active" aria-current="page"><i
                                class="fas fa-fw fa-database"></i></button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>

                    <div class="btn-group">
                        <a href="/goods" class="btn btn-warning active" aria-current="page"><i
                                class="fas fa-undo"></i></a>
                        <a href="/goods" class="btn btn-warning">Back</a>
                    </div>
                </div>

            </form>
        </div>

    </div>
    <!-- /.container-fluid -->

    <script>
        $('.custom-file-input').on('change', function () {
            let sampleFile = $(this).val().split('\\').pop();
            $(this).next('.custom-file-label').addClass("selected").html(sampleFile);
        });
    </script>

    </div>
    <!-- End of Main Content -->

    <%- include('../partials/footer')%>