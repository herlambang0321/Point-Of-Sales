<%- include('../partials/header')%>

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Purchases</h1>

        <div class="card">
            <div class="card-header">
                <h1>Transaction</h1>
            </div>

            <div class="card-body">
                <form id="start-form" class="row g-3">
                    <div class="col-md-4">
                        <label for="no_invoice" class="form-label">Invoice</label>
                        <input type="text" class="form-control" id="no_invoice" value="<%= purchases.invoice %>"
                            readonly>
                    </div>
                    <div class="col-md-4">
                        <label for="time" class="form-label">Time</label>
                        <input type="text" class="form-control" id="time"
                            value="<%= moment(purchases.time).format('DD MMM YYYY HH:mm:ss') %>" readonly>
                    </div>
                    <div class="col-md-4">
                        <label for="operator" class="form-label">Operator</label>
                        <input type="text" class="form-control" id="operator" value="<%= user.name %>" readonly>
                    </div>
                </form>
            </div>
            <hr>
            <div class="card-body">
                <form id="detail-form" class="row g-3">
                    <div class="col-md-4 py-3">
                        <label for="barcode" class="form-label">Goods Barcode</label>
                        <select name="barcode" id="barcode" class="form-control">
                            <!-- <option value="">Choose barcode product</option> -->
                            <% goods.forEach(item=> { %>
                                <option value="<%= item.barcode %>">
                                    <%= item.barcode + ' - ' + item.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="col-md-4 py-3">
                        <label for="name" class="form-label">Goods Name</label>
                        <input type="text" class="form-control" id="name" readonly>
                    </div>
                    <div class="col-md-4 py-3">
                        <label for="stock" class="form-label">Stock</label>
                        <input type="text" class="form-control" id="stock" readonly>
                    </div>
                    <div class="col-md-4 py-3">
                        <label for="purchaseprice" class="form-label">Purchase Price</label>
                        <input type="text" class="form-control" id="purchaseprice">
                    </div>
                    <div class="col-md-4 py-3">
                        <label for="quantity" class="form-label">Qty</label>
                        <input type="text" class="form-control" id="quantity">
                    </div>
                    <div class="col-md-4 py-3">
                        <label for="ttotalprice" class="form-label">Total Price</label>
                        <input type="text" class="form-control" id="totalprice">
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-fw fa-plus"></i>
                            </span>
                            <span class="text">Add</span>
                        </button>
                    </div>
                </form>
            </div>
            <hr>
            <table id="detail-table" class="table table-striped">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Barcode</th>
                        <th>Name</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Total Price</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>

            <div class="card-footer">
                <form>
                    <div class="row mb-3">
                        <label for="totalsum" class="col-sm-2 col-form-label">Total Summary</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="totalsum" value="<%= purchases.totalsum %>"
                                readonly>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="supplier" class="col-sm-2 col-form-label">Supplier</label>
                        <div class="col-sm-10">
                            <select type="text" class="form-control" id="supplier" name="supplier">
                                <!-- <option value="<%= purchases.supplier %>">
                                    <%= purchases.name %>
                                </option> -->
                                <% supplier.forEach(item=> { %>
                                    <option value="<%= item.supplierid %>">
                                        <%= item.name %>
                                            <% }) %>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Finish</span>
                    </button>

                    <a href="/purchases" class="btn btn-warning btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-arrow-left"></i>
                        </span>
                        <span class="text">Back</span>
                    </a>
                </form>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

    <%- include('../partials/footer')%>