<%- include('../partials/header')%>

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Users</h1>
        <p class="mb-4">This is data of Users</p>

        <!-- DataTables Users -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <div class="btn-group">
                    <a href="/users/add" class="btn btn-primary active" aria-current="page"><i
                            class="fas fa-fw fa-plus"></i></a>
                    <a href="/users/add" class="btn btn-primary">Add</a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>User ID</th>
                                <th>Email</th>
                                <th>Name</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>User ID</th>
                                <th>Email</th>
                                <th>Name</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "lengthMenu": [[3, 10, 100, -1], [3, 10, 100, "All"]],
                "processing": true,
                "serverSide": true,
                "ajax": "/users/tableuser",
                "columns": [
                    { "data": "userid" },
                    { "data": "email" },
                    { "data": "name" },
                    { "data": "role" },
                    {
                        data: "userid",
                        orderable: false,
                        render: function (data, type) {
                            return `
                            <button type="button" dataid="${data}" class="btn btn-success btn-circle btn-edit"><i class="fas fa-fw fa-info"></i></button>
                            <button type="button" dataid="${data}" class="btn btn-danger btn-circle btn-delete"><i class="fas fa-fw fa-trash"></i></button>
                            `
                        }
                    }
                ]
            });
        });
    </script>

    </div>
    <!-- End of Main Content -->

    <%- include('../partials/footer')%>