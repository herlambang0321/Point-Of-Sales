<%- include('../partials/header')%>

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Users</h1>
            <p class="mb-4">This is data of Users</p>

            <!-- DataTables Users -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <div class="btn-group">
                        <a href="#" class="btn btn-primary active" aria-current="page"><i class="fas fa-fw fa-plus"></i></a>
                        <a href="#" class="btn btn-primary">Add</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>User ID</th>
                                    <th>Email</th>
                                    <th>Name</th>
                                    <th>Role</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>User ID</th>
                                    <th>Email</th>
                                    <th>Name</th>
                                    <th>Role</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                    <% rows.forEach(item=> { %>
                                        <tr>
                                            <td>
                                                <%= item.userid %>
                                            </td>
                                            <td>
                                                <%= item.email %>
                                            </td>
                                            <td>
                                                <%= item.name %>
                                            </td>
                                            <td>
                                                <%= item.role %>
                                            </td>
                                            <td>
                                                <button class="btn btn-success btn-circle"><i
                                                        class="fas fa-fw fa-info"></i></button>
                                                <button class="btn btn-danger btn-circle"><i
                                                        class="fas fa-fw fa-trash"></i></button>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

    <%- include('../partials/footer')%>